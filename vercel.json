{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/recipe/(?<mood>[^/]+)/(?<time>[^/]+)",
      "dest": "/api/recipes?mood=$mood&time=$time"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 